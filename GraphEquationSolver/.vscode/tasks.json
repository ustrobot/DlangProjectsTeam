{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build debug",
            "type": "shell",
            "command": "dub",
            "args": [
                "build",
                "--build=debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$dmd"
        },
        {
            "label": "Build release",
            "type": "shell",
            "command": "dub",
            "args": [
                "build",
                "--build=release"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$dmd"
        },
        {
            "label": "Run debug",
            "type": "shell",
            "command": "dub",
            "args": [
                "run",
                "--build=debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$dmd"
        },
        {
            "label": "Run release",
            "type": "shell",
            "command": "dub",
            "args": [
                "run",
                "--build=release"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$dmd"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "dub",
            "args": [
                "clean"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "dub",
            "args": [
                "test"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$dmd"
        },
        {
            "label": "Build test_process_cleanup",
            "type": "shell",
            "command": "rdmd",
            "args": [
                "--build-only",
                "--compiler=dmd",
                "--force",
                "-g",
                "-debug",
                "-I=src",
                "-of=test_process_cleanup",
                "test_process_cleanup.d"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$dmd",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build tests for debug",
            "type": "shell",
            "command": "dub",
            "args": [
                "build",
                "--config=unittest",
                "--build=unittest"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$dmd"
        }
    ]
}